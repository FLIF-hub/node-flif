# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,css,html}]
charset = utf-8

# 4 space indentation
[*.{js,css,sass,scss}]
indent_style = space
indent_size = 4

[*.{json}]
indent_style = space

[*.{html}]
indent_style = space
indent_size = 2
